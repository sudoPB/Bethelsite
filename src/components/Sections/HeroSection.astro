---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Welcome to Our Church",
  subtitle = "A place of worship, community, and spiritual growth",
  backgroundImage = "/uploads/hero-bg.jpg",
  ctaText = "Plan Your Visit",
  ctaLink = "/im-new",
  secondaryCtaText = "Watch Sermons",
  secondaryCtaLink = "/sermons",
} = Astro.props;
---

<section
  class="relative min-h-[70vh] flex items-center bg-cover pt-30"
  style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(${backgroundImage}); background-position: center 20%;`}
>
</section>