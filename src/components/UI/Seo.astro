---
export interface Props {
  title: string;
  description: string;
  image?: {
    url: string;
    alt: string;
  };
  type?: "website" | "article";
  canonicalUrl?: string;
}

const {
  title,
  description,
  image = {
    url: "/uploads/church-default.webp",
    alt: "Bethel Baptist Church",
  },
  type = "website",
  canonicalUrl,
} = Astro.props;

// Get the canonical URL
const canonicalURL = canonicalUrl || new URL(Astro.url.pathname, Astro.site);

// Get Church address and contact info (would come from site config in a real implementation)
const churchInfo = {
  name: "Bethel Baptist Church",
  address: {
    streetAddress: "#29, 3rd Cross, 4th Main, Ashwini Layout",
    addressLocality: "Ejipura",
    addressRegion: "Bangalore, Karnataka",
    postalCode: "560047",
    addressCountry: "IN",
  },
  telephone: "+91-91138-73936",
  email: "jkjbaptistcare@yahoo.com",
  url: Astro.site?.toString() || "https://www.bethelbaptistchurch.in/",
};
---

<!-- Basic SEO -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.url, Astro.site)} />
<meta property="og:image:alt" content={image.alt} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.url, Astro.site)} />
<meta property="twitter:image:alt" content={image.alt} />

<!-- JSON-LD Schema for Church -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Church",
    "name": "${churchInfo.name}",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "${churchInfo.address.streetAddress}",
      "addressLocality": "${churchInfo.address.addressLocality}",
      "addressRegion": "${churchInfo.address.addressRegion}",
      "postalCode": "${churchInfo.address.postalCode}",
      "addressCountry": "${churchInfo.address.addressCountry}"
    },
    "telephone": "${churchInfo.telephone}",
    "email": "${churchInfo.email}",
    "url": "${churchInfo.url}"
  }
</script>

{
  type === "article" && (
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Article",
        "headline": "${title}",
        "image": "${new URL(image.url, Astro.site)}",
        "description": "${description}",
        "publisher": {
          "@type": "Organization",
          "name": "${churchInfo.name}",
          "logo": {
            "@type": "ImageObject",
            "url": "${new URL("/uploads/logo.png", Astro.site)}"
          }
        },
        "url": "${canonicalURL}",
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "${canonicalURL}"
        }
      }
    </script>
  )
}