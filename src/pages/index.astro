---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import SermonList from "../components/Sections/SermonList.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection
    title="Welcome to Our Church"
    subtitle="A place of worship, community, and spiritual growth"
    backgroundImage="/uploads/hero-bg.webp"
  />

  <!-- Service Times -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Join Us This Sunday</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Tamil Service</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">7:00 AM</p>
          </div>

          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">English Service</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">10:30 AM</p>
          </div>

          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">All age Sunday Scahool</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">9:00 AM</p>
          </div>
        </div>

        <Button href="/im-new" variant="outline">
          Plan Your Visit
        </Button>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="/uploads/church-default.webp"
            alt="Our Church"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">About Our Church</h2>
          <p class="text-gray-700 mb-6 text-lg">
            Founded in 1982, Bethel Baptist Church in Bangalore is a
            Christ-centered community rooted in God’s Word and built on a legacy
            of faith, service, and spiritual growth. What began as a small Bible
            fellowship has grown into a vibrant, self-supporting church
            committed to sharing the love of Christ in our city and beyond.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            Whether you're exploring faith or looking for a church to call home,
            we invite you to join us. Our diverse congregation welcomes people
            of all ages and backgrounds to grow, worship, and serve together.
          </p>

          <Button href="/about-us"> Learn More About Us </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Events Section -->
  <EventList />

  <!-- Sermons Section -->
  <SermonList />

  <!-- Ministries Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Ministries</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover how you can connect, serve, and grow through our various
          ministries
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Youth Ministry</h3>
          <p class="text-gray-700 mb-4">
            A vibrant community for teens and young adults (10th grade & above) focused on Bible study, discipleship, and spiritual growth.
          </p>
          <a
            href="/ministries/youth-fellowship"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>

        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-secondary-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-secondary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10.4V20M12 10.4C12 8.15979 12 7.03969 11.564 6.18404C11.1805 5.43139 10.5686 4.81947 9.81596 4.43597C8.96031 4 7.84021 4 5.6 4H4.6C4.03995 4 3.75992 4 3.54601 4.10899C3.35785 4.20487 3.20487 4.35785 3.10899 4.54601C3 4.75992 3 5.03995 3 5.6V16.4C3 16.9601 3 17.2401 3.10899 17.454C3.20487 17.6422 3.35785 17.7951 3.54601 17.891C3.75992 18 4.03995 18 4.6 18H7.54668C8.08687 18 8.35696 18 8.61814 18.0466C8.84995 18.0879 9.0761 18.1563 9.29191 18.2506C9.53504 18.3567 9.75977 18.5065 10.2092 18.8062L12 20M12 10.4C12 8.15979 12 7.03969 12.436 6.18404C12.8195 5.43139 13.4314 4.81947 14.184 4.43597C15.0397 4 16.1598 4 18.4 4H19.4C19.9601 4 20.2401 4 20.454 4.10899C20.6422 4.20487 20.7951 4.35785 20.891 4.54601C21 4.75992 21 5.03995 21 5.6V16.4C21 16.9601 21 17.2401 20.891 17.454C20.7951 17.6422 20.6422 17.7951 20.454 17.891C20.2401 18 19.9601 18 19.4 18H16.4533C15.9131 18 15.643 18 15.3819 18.0466C15.15 18.0879 14.9239 18.1563 14.7081 18.2506C14.465 18.3567 14.2402 18.5065 13.7908 18.8062L12 20"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Adult Bible Class</h3>
          <p class="text-gray-700 mb-4">
            A structured Bible teaching program for all age groups, laying a strong foundation in God’s Word through systematic study and fellowship.
          </p>
          <a
            href="/ministries/adult-bible-class"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>

        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-accent-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-accent-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Sunday School</h3>
          <p class="text-gray-700 mb-4">
            A structured Bible teaching program for all age groups, laying a strong foundation in God’s Word through systematic study and fellowship.
          </p>
          <a
            href="/ministries/sunday-school"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>
      </div>

      <div class="mt-12 text-center">
        <Button href="/ministries" variant="outline">
          View All Ministries
        </Button>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/thank-you-bg.webp)"
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">
          Ready to Join Our Community?
        </h2>
        <p class="text-xl mb-8">
          We'd love to welcome you to our church family. Come visit us this
          Sunday or reach out with any questions.
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/im-new" variant="primary" size="lg">
            I'm New Here
          </Button>

          <Button
            href="/contact"
            variant="outline"
            size="lg"
            class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm"
          >
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
